EAS_PROJECT_ID=your_eas_project_id

# ============================================================================
# API ENDPOINTS & SERVICES
# ============================================================================

# Main API Backend (Next.js/FastAPI)
API_BASE_URL=https://api.vivesaude.com.br/v1
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# AI/ML Services
AI_SERVICE_URL=https://ai.vivesaude.com.br
AI_API_KEY=your_ai_api_key_here
AI_MODEL_VERSION=v2.1

# OCR Service
OCR_SERVICE_URL=https://ocr.vivesaude.com.br
OCR_API_KEY=your_ocr_api_key_here
TESSERACT_API_KEY=your_tesseract_key

# File Storage (AWS S3 / Google Cloud)
STORAGE_BUCKET=vivesaude-exams-prod
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=your_storage_access_key
STORAGE_SECRET_KEY=your_storage_secret_key

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Providers
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

APPLE_OAUTH_CLIENT_ID=your_apple_client_id
APPLE_OAUTH_PRIVATE_KEY=your_apple_private_key

# Biometric Authentication
BIOMETRIC_FALLBACK_ENABLED=true
BIOMETRIC_TIMEOUT=30000

# Encryption Keys (AES-256)
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_IV=your_16_character_iv_here

# ============================================================================
# HEALTHCARE COMPLIANCE
# ============================================================================

# HIPAA Compliance
HIPAA_ENCRYPTION_ENABLED=true
HIPAA_AUDIT_LOG_ENABLED=true
HIPAA_DATA_RETENTION_DAYS=2555  # 7 years

# LGPD Compliance (Brazil)
LGPD_CONSENT_REQUIRED=true
LGPD_DATA_PORTABILITY_ENABLED=true
LGPD_RIGHT_TO_DELETION_ENABLED=true

# Audit Logging
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_ENCRYPTION=true

# ============================================================================
# PAYMENT & MONETIZATION
# ============================================================================

