# ============================================================================
# EXPO CONFIGURATION
# ============================================================================
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_API_URL=https://api.vivesaude.com.br
EXPO_PUBLIC_WEB_URL=https://vivesaude.com.br
